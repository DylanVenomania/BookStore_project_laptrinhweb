spring.application.name=LittleLotus

# Cấu hình LOGGING (Ghi log cho Admin)
logging.level.com.littlelotus=INFO
logging.file.name=little-lotus.log
logging.pattern.file=%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n


# Cấu hình Database MS SQL Server
spring.datasource.url=jdbc:sqlserver://localhost:1433;databaseName=LittleLotusBookStoreDB;encrypt=true;trustServerCertificate=true
spring.datasource.username=sa
spring.datasource.password=123456789
spring.datasource.driver-class-name=com.microsoft.sqlserver.jdbc.SQLServerDriver

# Cấu hình JPA/Hibernate
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.SQLServer2016Dialect
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=false

# Cấu hình View (JSP)
spring.mvc.view.prefix=/WEB-INF/jsp/
spring.mvc.view.suffix=.jsp


# Cấu hình GraphQL
spring.graphql.graphiql.enabled=true